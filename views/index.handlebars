<h1>EAT DA HAMBURGER</h1>

<h2>Burgers To Eat</h2>

<ul>
  {{#each burgers}}
  {{#if devoured}}
      <span><strong> {{this.burger_name}} </strong></span>
  {{/if}}
  {{/each}}
</ul>

<h2>Order Burgers</h2>
<ul>
  {{#each burgers}}
  {{#unless devoured}}
  
      {{this.burger_name}}<br>
  {{/unless}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>

<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger name:</label>
    <input type="text" id="Burger" name="name">
  </div>
  <button type="submit">Add Burger</button>
</form> 